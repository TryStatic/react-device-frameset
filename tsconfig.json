{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "react",
    "lib": ["ES2015", "DOM"],
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "outDir": "lib",
    "noErrorTruncation": true
  },
  "include": ["src/**/*"]
}
